<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <div class="w-full flex justify-end">
            <a class="bg-red-500 px-4 py-2 rounded-md mb-2" href="/logout">Logout</a>
        </div>
        <div class="flex gap-2">
            <div class="w-10 h-10 rounded-md overflow-hidden">
                <img class="h-full w-full object-cover" src="/images/uploads/<%= user.profilepic %>" alt="">
            </div>
            <h3 class="text-3xl mb-3"><span class="font-light">Hello</span>
                <%= user.name %>
            </h3>
        </div>
        <h5 class="mb-5 mt-3">You can create a post</h5>
        <form method="post" action="/post">
            <textarea name="content" id="" placeholder="What's in your mind ?"
                class="block p-3 outline-none w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md"></textarea>
            <input type="submit" class="px-4 py-2 bg-blue-500 rounded-md block mt-2" value="Create new post">
        </form>
        <div class="posts mt-20">
            <h3 class="text-zinc-400">Your post</h3>
            <div class="postcontainer mt-5">
                <% user.posts.reverse().forEach(function(post){%>
                    <div class="post w-1/3 p-4 mb-4 rounded-md border-2 border-zinc-700 bg-zinc-800">
                        <h4 class="text-blue-500 mb-2">@<%= user.username %>
                        </h4>
                        <p class="text-sm tracking-tight">
                            <%= post.content %>
                        </p>
                        <small class="mt-2 inline-block">
                            <%= post.likes.length %> likes
                        </small>
                        <div class="btns flex gap-4 mt-1">
                            <a href="/like/<%= post._id %>" class="text-blue-500">
                                <%= (post.likes || []).filter(like=> like)
                                    .map(like => like.toString())
                                    .includes(user._id.toString())
                                    ? "Unlike"
                                    : "Like" %>
                            </a>
                            <a href="/edit/<%= post._id %>" class="text-zinc-600">Edit</a>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>
</body>

</html>